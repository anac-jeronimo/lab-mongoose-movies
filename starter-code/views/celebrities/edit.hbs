<h2>Editing {{celebrities.name}} </h2>


<form action="/celebrities/{{celebrities._id}}/edit" method="POST">
  <label>Name
    <input type="text" name="name" value="{{celebrities.name}}">
  </label>
  <label>
  Occupation
  <input type="text" name="occupation" value="{{celebrities.occupation}}">
  </label>
  <label>
    Catch Phrase
    <textarea name="catchPhrase" cols="30" rows="2" >
    {{celebrities.catchPhrase}}
    </textarea>
  </label>
  <button type="submit">Create</button>
</form>